using UnityEngine;
using System.Collections;
using System.Collections.Generic;

[System.Serializable]
public class Util {
    public static void SafeDestroy (GameObject thingie) {
        if (Application.isPlaying) {
            GameObject.Destroy(thingie);
        } else {
            GameObject.DestroyImmediate(thingie);
        }
    }
}
