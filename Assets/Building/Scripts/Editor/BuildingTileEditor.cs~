using UnityEditor;
using UnityEditor.SceneManagement;
using UnityEngine;

namespace Building {
    [CustomEditor(typeof(BuildingTile))]
    public class BuildingTileEditor : Editor {
        BuildingTile    _parsedTarget;
        BuildingTile    Target {
            get {
                if (_parsedTarget == null) _parsedTarget = (BuildingTile) target;
                return _parsedTarget;
            }
        }

        void DrawToggle (string wallName) {
            // Target.SetWallActive(wallName,
            //     EditorGUILayout.Toggle(Target.IsWallActive(wallName), "Button"));
        }

        public override void OnInspectorGUI () {
            DrawDefaultInspector();
            DrawToggle("north");
            GUILayout.BeginHorizontal();
            DrawToggle("west");
            GUILayout.Space(50);
            DrawToggle("east");
            GUILayout.EndHorizontal();
            DrawToggle("south");

            if (GUI.changed) {
                EditorUtility.SetDirty(Target);
                EditorSceneManager.MarkSceneDirty(Target.gameObject.scene);
            }
        }

        void OnSceneGUI () {

        }
    }
}
